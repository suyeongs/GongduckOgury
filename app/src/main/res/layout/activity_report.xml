<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:weightSum="10">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/a_project"
            android:text="신고시스템"
            android:textSize="25dp" />

        <Button
            android:id="@+id/btn_back_h"
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:background="@drawable/back_white" />

    </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/disasterBtn"
        android:layout_marginBottom="25dp"
        android:text="재난 신고"
        android:textSize="22dp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/hangeul_nuri_bold"
        android:background="@drawable/btn_report1"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/mapoBtn"
        android:text="마포구 종합상황실"
        android:background="@drawable/btn_report"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:textColor="#ff451b"
        android:fontFamily="@font/hangeul_nuri_bold"
        android:layout_marginBottom="25dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/gongduckBtn"
        android:text="공덕119 안전센터"
        android:background="@drawable/btn_report"
        android:textSize="20dp"
        android:textColor="#ff451b"
        android:fontFamily="@font/hangeul_nuri_bold"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>
</LinearLayout>